pipeline {
    agent any

    stages {
        stage('Terraform Init') {
            steps {
                script {
                    // Utiliser les informations d'identification SSH pour accéder au dépôt Git
                    withCredentials([sshUserPrivateKey(credentialsId: '87797f30-504f-499c-9047-cf64f656bf75', keyFileVariable: 'SSH_PRIVATE_KEY', passphraseVariable: '', usernameVariable: '')]) {
                        // Cloner le dépôt Git avec la clé SSH
                        sh '''
                            eval $(ssh-agent -s)
                            ssh-add $SSH_PRIVATE_KEY
                            git clone git@github.com:souhaomrani2/machine.git
                        '''
                    }
                    // Initialiser Terraform
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                script {
                    // Appliquer les changements Terraform
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }

    post {
        always {
            // Nettoyer Terraform après exécution
            script {
                sh 'terraform destroy -auto-approve'
            }
        }
    }
}
